{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/renderer",
    "rootDir": "./src/renderer",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ES2020",
    "moduleResolution": "node",
    "isolatedModules": false,
    "skipLibCheck": true,
    "types": []
  },
  "include": ["src/renderer/**/*"],
  "exclude": ["node_modules", "dist"]
}
